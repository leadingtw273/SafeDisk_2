<div class="row">
    <div class="panel-body formContainer">
        <form id="reg-form" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="email">使用者Email</label>
                <div class="col-sm-5">
                    <input class="form-control" type="text" placeholder="請輸入Email" id="email" name="email">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="phone">連絡電話</label>
                <div class="col-sm-5">
                    <input class="form-control" type="text" placeholder="請輸入連絡電話" id="phone" name="phone">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="username">帳號</label>
                <div class="col-sm-5">
                    <input class="form-control" type="text" placeholder="請輸入帳號" id="username" name="username">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="password">密碼</label>
                <div class="col-sm-5">
                    <input class="form-control" type="password" placeholder="請輸入密碼" id="password" name="password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="verifypassword">重新輸入 密碼</label>
                <div class="col-sm-5">
                    <input class="form-control" type="password" placeholder="重新輸入密碼" id="verifypassword" name="verifypassword">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary form-save" name="signup1" value="Sign up">註冊</button>
                </div>
            </div>
        </form>
    </div>
</div>


