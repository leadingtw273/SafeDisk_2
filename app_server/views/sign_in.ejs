<% if (errors.length > 0) { %>
    <div class="alert alert-danger">
        <strong>Error!</strong>
        <%= errors %>
    </div>
    <% } %>

        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <form id="reg-form" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="username">帳號</label>
                        <div class="col-sm-5">
                            <input class="form-control" type="text" placeholder="請輸入帳號" id="username" name="username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="password">密碼</label>
                        <div class="col-sm-5">
                            <input class="form-control" type="password" placeholder="請輸入密碼" id="password" name="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary form-save" name="signup" value="Sign up">登入</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


        <link rel="stylesheet" href="./stylesheets/signin.css">

        <script src="./js/signin_valiation.js" rel="js" type="text/javascript"></script>